{
  "compilerOptions": {
    "target": "es2017",
    "sourceMap": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "declaration": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "newLine": "LF",
    "outDir": "./dist"
  },
  "files": ["src/index.ts"]
}
